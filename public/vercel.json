{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "CLAUDE_API_KEY": "@claude_api_key"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}
